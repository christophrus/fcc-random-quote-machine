{
  "name": "fcc-random-quote-machine",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://christophrus.github.io/fcc-random-quote-machine",
  "dependencies": {
    "font-awesome": "^4.7.0",
    "gh-pages": "^2.0.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-helmet": "^5.2.0",
    "react-scripts": "2.1.8",
    "tailwindcss": "^0.7.4"
  },
  "scripts": {
